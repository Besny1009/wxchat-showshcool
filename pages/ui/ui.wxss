.uiDescrition{
  background: #1D2228;
  color: #fff;

}

.uiDescrition .ui_txt1{
  font-size: 40rpx;
  text-align: center;
  padding: 10rpx;
}

.uiDescrition .ui_txt2{
  font-size: 26rpx;
