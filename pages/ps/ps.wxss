

.banner image{
  width: 750rpx;
  height: 1080rpx;
  display: block;
}

.out{
  padding: 60rpx 0;
  background: #1b366d;
}

.out:nth-child(2n){
  background: #fff;
}
.out:nth-child(2n) .outConTxt .txt .li{
  color: #000;
}
.out:nth-child(2n) .outConTxt .txt .li::before{
  background: #000;
}

.out .outTit{
  width: 550rpx;
  height: 65rpx;
  background: #de2e05;
  border-radius: 65rpx;
  line-height: 65rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin: 0 90rpx;
  position: relative;
  margin-bottom: 50rpx;
}
.out .outTit::after{
  width: 550rpx;
  height: 65rpx;
  display: block;
  content: "";
  border: 2rpx dashed #de2e05;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  transform: scale(1.02,1.2);
  border-radius: 65rpx;
  box-sizing: border-box;
}

.outConIcon{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.outConIcon .item{
  padding: 0 20rpx 20rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.outConIcon .item image{
  width: 200rpx;
  height: 200rpx;
}

.outConTxt .pic{
  margin-bottom: 60rpx;
}
.outConTxt .pic image{
  width: 750rpx;
  height: 447rpx;
}

.outConTxt .txt{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 30rpx;
}

.outConTxt .txt .li{
  width: 50%;
  font-size: 26rpx;
  position: relative;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  color: #fff;
}

.outConTxt .txt .li::before{
  display: block;
  content: "";
  width: 6rpx;
  height: 6rpx;
  background: #fff;
  position: absolute;
  top: 27rpx;
  left: 16rpx;
  border-radius: 6rpx;

}

