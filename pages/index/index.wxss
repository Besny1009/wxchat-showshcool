}

.works{
  padding: 80rpx 30rpx 70rpx;
  background: #f0f3f8;
}


.wkCon{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.wkCon navigator{
  margin-bottom: 10rpx;
  position: relative;
}
.wkCon navigator image{
  width: 340rpx;
  height: 215rpx;
  display: block;
}
.works navigator .ceng{
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  top: 0;
  left: 0;
  color: #fff;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.wkCon .ceng .txt{
  font-size: 28rpx;
}
.wkCon .ceng .line{
  width: 30rpx;
  height: 4rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 10rpx 15rpx;
}
.wkCon .ceng .des{
  font-size: 20rpx;
  opacity: 0.6;
  text-transform: uppercase;
}

