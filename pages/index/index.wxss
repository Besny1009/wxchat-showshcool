.subject{
  padding: 30rpx 0;
  box-shadow: 0rpx 10rpx 20rpx rgba(0, 0, 0, .2);
}
.subOut{
  white-space: nowrap;
  
}
.subBox{
  display: inline-block;
  padding: 0 30rpx;
  text-align: center;
}

.subBox image{
  width: 98rpx;
  height: 98rpx;
}
.subBox view{
  padding-top: 10rpx;
